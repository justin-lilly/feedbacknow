<body>

	 <header class="clearfix">
	  <div class="row">
	    <div  class="large-2 columns logo">
	      <img id="ourlogo" src="http://38.media.tumblr.com/4a0b624546d6dd56d1aafc3c855c8ea0/tumblr_n9dultZpLm1qdk1mqo1_400.jpg"/> 
	    </div>

	  </div>
	</header>






	<div class="container">
		<a href="/home">Home </a><br><br>

		<h3> Hi <%= @teacher.username %>, your lectures are: <br> </h3>

		<% @lectures.each do |lecture| %>

		<a href="/lectures/<%=lecture.id%>" ><%= lecture.name %> </a><br><br>


		<% end %>

		<br><br>
		<h3> Add a new lecture: <br> </h3>

		<form action="/lectures/new" method="post">
		  <label for="title">Title:</label>
		  <input type="text" id="title" name="lecture[name]"> <br><br>


		  <input type="hidden" id="teacher" value= <%=@teacher.id %> name="lecture[teacher_id]">


		  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden"> 
		  <input class="button" type="submit" value="submit">
		</form>
	</div>





